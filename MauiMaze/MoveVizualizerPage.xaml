<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMaze.MoveVizualizerPage"
             xmlns:drawables="clr-namespace:MauiMaze.Drawables"
             xmlns:mdls="clr-namespace:MauiMaze.Engine"
             Title="MoveVizualizerPage">
    <ContentPage.Resources>
        <drawables:MazeDrawable x:Key="MazeDrawable"/>
    </ContentPage.Resources>
    <VerticalStackLayout
     Spacing="25"
         Padding="30,0"
         VerticalOptions="Center">
        <HorizontalStackLayout
         HorizontalOptions="Center">


        </HorizontalStackLayout>
        <Grid  Margin="45,0,45,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout 
         MinimumHeightRequest="300"
         Grid.Column="0"
         MinimumWidthRequest="120"
         >
                <ListView ItemsSource="{Binding Records}" x:Name="recordsList" SelectedItem="{Binding ActualGamerecord}" VerticalOptions="FillAndExpand" ItemSelected="OnItemSelectedChanged">
                    <ListView.ItemTemplate x:DataType="mdls:GameRecord">
                        <DataTemplate  >
                            <ViewCell>
                                <HorizontalStackLayout>
                                    <Label Text="{Binding grID}" MinimumHeightRequest="50" />
                                    <Button Text=" " BackgroundColor="{Binding color}"/>
                                </HorizontalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <HorizontalStackLayout>
                    <Button Text="Position view"
                            Command="{Binding switchToPositionCommand}"
                            IsEnabled="{Binding PositionEnabled}"
                            />
                    <Button Text="Cell view"
                             Command="{Binding switchToCellCommand}"
                            IsEnabled="{Binding CellEnabled}"
                            />
                </HorizontalStackLayout>
            </StackLayout>


            <GraphicsView 
         x:Name="canvas"
         MaximumWidthRequest="500"
         MinimumHeightRequest="300"
         Grid.Column="2"
         HorizontalOptions="FillAndExpand"
         VerticalOptions="FillAndExpand"
         Drawable="{StaticResource MazeDrawable}" />
        </Grid>
        <HorizontalStackLayout VerticalOptions="FillAndExpand">
            <Button
         x:Name="ALLButton"
         Text="Show All"
         IsEnabled="{Binding ShowAllEnabled}"
         Command="{Binding switchToAllCommand}"
         MinimumWidthRequest="300"
         HorizontalOptions="Center" />
            <VerticalStackLayout>
                <Slider VerticalOptions="Center" 
                x:Name="sizeSlider"
                Minimum="0"
                Maximum="100"
                MinimumWidthRequest="200"
                Value="{Binding MovePercentage}"
                
                DragStartedCommand="{Binding ValueChangedCommand}"
                />
                <Label x:Name="moveprecentage" Text="{Binding MovePercentage}"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>