<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMaze.ViewModels.HexagonalMazePage"
             xmlns:drawables="clr-namespace:MauiMaze.Drawables"
             Title="HexagonalMazePage">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <ContentPage.Resources>
        <drawables:HexagonalMazeDrawable x:Key="HexagonalMazeDrawable"/>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label 
            x:Name="sizes"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
                x:Name="Back"
                Text="Back"
                SemanticProperties.Hint="Counts the number of times you click"
                
                HorizontalOptions="Center" />

        <GraphicsView 
            x:Name="canvas"
            Grid.Row="1"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            
            Drawable="{StaticResource HexagonalMazeDrawable}" />

    </Grid>
</ContentPage>