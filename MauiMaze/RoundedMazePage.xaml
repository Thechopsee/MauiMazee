<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawables="clr-namespace:MauiMaze.Drawables"
             x:Class="MauiMaze.RoundedMazePage"
             Title="RoundedMazePage">
    <ContentPage.Resources>
        <drawables:RoundedMazeDrawable x:Key="MazeDrawable"/>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GraphicsView 
            x:Name="Canvas"
            Grid.Row="2"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            DragInteraction="GameView_DragInteraction"
            Drawable="{StaticResource MazeDrawable}" />
    </Grid>
</ContentPage>