<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMaze.RecordFullPage"
             Title="RecordFullPage">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <StackLayout Margin="20">
        <Label Text="Name:"/>
        <Label Text="{Binding NameRecord.name}"/>
        <!--<Button Text="Set Name" Clicked="SetName_Clicked" Margin="5"/>-->

        <Label Text="Maze ID:"/>
        <Label Text="{Binding NameRecord.mazeID}"/>
        <!--<Button Text="Set Maze ID" Clicked="SetMazeID_Clicked" Margin="5"/>-->

        <Label Text="Number of Tries:"/>
        <Label Text="{Binding NameRecord.numOfTry}"/>
        <!--<Button Text="Set Tries" Clicked="SetNumOfTry_Clicked" Margin="5"/>-->

        <Label Text="Hit Walls Count:"/>
        <Label Text="{Binding NameRecord.hitWallsCount}"/>
        <!--<Button Text="Set Walls Count" Clicked="SetHitWallsCount_Clicked" Margin="5"/>-->

        <Label Text="Travel Length:"/>
        <Label Text="{Binding NameRecord.travelLenght}"/>
        <!--<Button Text="Set Travel Length" Clicked="SetTravelLength_Clicked" Margin="5"/>-->
        <Button Text="Return to menu"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="backToMenu"
                />
    </StackLayout>
</ContentPage>