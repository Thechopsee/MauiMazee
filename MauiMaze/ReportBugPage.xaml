<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMaze.ReportBugPage"
             Title="ReportBugPage">
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Sender:" />
            <Entry x:Name="senderEntry" Placeholder="Sender" />
        </StackLayout>

        <StackLayout>
            <Label Text="Subject:" />
            <Entry x:Name="subjectEntry" Placeholder="Subject" />
        </StackLayout>

        <StackLayout>
            <Label Text="Bug description:" />
            <Editor x:Name="textEditor" Placeholder="Text" HeightRequest="150" />
        </StackLayout>

        <Button Text="Submit" Clicked="SubmitButton_Clicked" x:Name="submitBTn" />
    </VerticalStackLayout>
</ContentPage>
